# ------------------------------------------------------------
# Define your General project environment variables here.
# ------------------------------------------------------------
# DJANGO_READ_DOT_ENV_FILE=True
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=!!!SET DJANGO_SECRET_KEY!!!
DJANGO_ADMIN_URL=!!!SET DJANGO_ADMIN_URL!!!
DJANGO_ALLOWED_HOSTS=.{{ cookiecutter.domain_name }}

# ------------------------------------------------------------
# Define your Security related environment variables here.
# ------------------------------------------------------------
# TIP: better off using DNS, however, redirect is OK too
DJANGO_SECURE_SSL_REDIRECT=False

# ------------------------------------------------------------
# Define your Email related environment variables here.
# ------------------------------------------------------------
DJANGO_SERVER_EMAIL=
{% if cookiecutter.mail_service == 'Mailgun' %}
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
{% elif cookiecutter.mail_service == 'Mailjet' %}
MAILJET_API_KEY=
MAILJET_SECRET_KEY=
{% elif cookiecutter.mail_service == 'Mandrill' %}
MANDRILL_API_KEY=
{% elif cookiecutter.mail_service == 'Postmark' %}
POSTMARK_SERVER_TOKEN=
{% elif cookiecutter.mail_service == 'Sendgrid' %}
SENDGRID_API_KEY=
SENDGRID_GENERATE_MESSAGE_ID=True
SENDGRID_MERGE_FIELD_FORMAT=None
{% elif cookiecutter.mail_service == 'SendinBlue' %}
SENDINBLUE_API_KEY=
{% elif cookiecutter.mail_service == 'SparkPost' %}
SPARKPOST_API_KEY=
{% endif %}

{% if cookiecutter.cloud_provider == 'AWS' %}
# ------------------------------------------------------------
# Define your AWS related environment variables here.
# ------------------------------------------------------------
DJANGO_AWS_ACCESS_KEY_ID=
DJANGO_AWS_SECRET_ACCESS_KEY=
DJANGO_AWS_STORAGE_BUCKET_NAME=

{% elif cookiecutter.cloud_provider == 'GCP' %}
# ------------------------------------------------------------
# Define your GCP related environment variables here.
# ------------------------------------------------------------
GOOGLE_APPLICATION_CREDENTIALS=
DJANGO_GCP_STORAGE_BUCKET_NAME=
{% endif %}

# ------------------------------------------------------------
# Define your django-allauth related environment variables here.
# ------------------------------------------------------------
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True

# ------------------------------------------------------------
# Define your Gunicorn related environment variables here.
# ------------------------------------------------------------
WEB_CONCURRENCY=4

{% if cookiecutter.use_sentry == 'y' %}
# ------------------------------------------------------------
# Define your Sentry related environment variables here.
# ------------------------------------------------------------
SENTRY_DSN=
{% endif %}

# ------------------------------------------------------------
# Define your Redis related environment variables here.
# ------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# ------------------------------------------------------------
{% if cookiecutter.use_celery == 'y' %}
# ------------------------------------------------------------
# Define your Celery and Flower environment variables here.
# ------------------------------------------------------------
CELERY_FLOWER_USER=!!!SET CELERY_FLOWER_USER!!!
CELERY_FLOWER_PASSWORD=!!!SET CELERY_FLOWER_PASSWORD!!!
{% endif %}
